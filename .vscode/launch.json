    "version": "0.2.0",
    "configurations": [
        {
            "name": "Main Train",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main_learning.py",
            "console": "integratedTerminal",
            "args": [
                "--data_config=config/our2.conf",
                "--out_dir=results",
                "--dataset=our2",
                "--mode=train",
                "--imu_freq=100",
                "--sampling_freq=100",
                "--window_time=1",
                // "--visualize_net"
                // "--continue_from=results/our2/checkpoints/model_net/checkpoint_90.pt"
            ]
        },
        {
            "name": "Main Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main_learning.py",
            "console": "integratedTerminal",
            "args": [
                "--data_config=config/our2.conf",
                "--out_dir=results",
                "--dataset=our2",
                "--mode=test",
                "--imu_freq=100",
                "--sampling_freq=100",
                "--window_time=1",
                "--model_fn=checkpoint_40.pt",
                "--show_plots"
            ]
        },
        {
            "name": "Main Filter",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main_filter.py",
            "console": "integratedTerminal",
            "args": [
                "--data_config=config/our2.conf",
                "--out_dir=results",
                "--dataset=our2",
                "--checkpoint_fn=checkpoint_40.pt", //
                "--model_param_fn=model_net_parameters.json"
            ]
        },
        {
            "name": "Filter Plot",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/filter/python/plot_filter_output.py",
            "console": "integratedTerminal",

    "version": "0.2.0",
    "configurations": [
        {
            "name": "train",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main_learning.py",
            "console": "integratedTerminal",
            "args": [
                "--root_dir=datasets",
                "--out_dir=results",
                "--dataset=DIDO",
                "--mode=train",
                "--imu_freq=400",
                "--sampling_freq=400",
                "--window_time=1.0"
            ]
        },
        {
            "name": "test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main_learning.py",
            "console": "integratedTerminal",
            "args": [
                "--root_dir=datasets",
                "--out_dir=results",
                "--dataset=DIDO",
                "--mode=test",
                "--imu_freq=400",
                "--sampling_freq=400",
                "--window_time=1",
                "--model_fn=checkpoint_40.pt",
                "--show_plots"
            ]
        },
        {
            "name": "Main Filter",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main_filter.py",
            "console": "integratedTerminal",
            "args": [
                "--root_dir=datasets",
                "--out_dir=results",
                "--dataset=DIDO",
                "--data_list=test.txt",
                "--checkpoint_fn=checkpoint_10.pt", //
                "--model_param_fn=model_net_parameters.json"
            ]
        },
        {
            "name": "Filter Plot",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/filter/python/plot_filter_output.py",
            "console": "integratedTerminal",
            "args": [
                "--dataset_dir=datasets",
                "--result_dir=results",
                "--dataset=DIDO",
                "--seq=circle_a_2.2_v_3.5_r_1.5_yaw_2022-02-21-23-18-26"
            ]
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--dataset_dir=datasets/Simulation/",
                "--data_list=data_list.txt"
            ]
        }
    ]
